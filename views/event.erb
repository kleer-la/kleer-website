					<% if @event.is_webinar %>
						<br/>Zona Horaria: <%=@event.time_zone_name%>
					<% end %>
				</div>
			</div>
		</div>
		<!-- / small (sm), medium (md) y large (lg) logistics -->

		<!-- extra small (xs) logistics -->
		<div class="container-fluid visible-xs">

			<div class="col-xs-12">
				<div class="container-fluid">
					<div class="col-xs-2 no-hpadding logistic-indicator">
							<img src="<%=@event.trainer.gravatar_picture_url%>?size=80" class="img-circle img-responsive">
							<br/>&nbsp;
					</div>
					<div class="col-xs-10 no-hpadding event-facilitator-text">
						<strong><%=t("event.facilitator")%>:</strong><br/>
