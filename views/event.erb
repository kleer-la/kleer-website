<div class="container-fluid fondo-celeste slide-header-evento">
	<div class="container">
		<div class="container-fluid container-header-generico container-header-evento">
			<div class="col-md-7">
				<div class="evento-title-container">
					<h2><%= @event.event_type.name %></h2>
					<h3><%= @event.is_webinar ? "Webinar" : "Presencial" %>, <%= @event.event_type.duration%> horas</h3>
					<p><%= @event.event_type.elevator_pitch %></p>

					<% if @event.event_type.rating_opinions_count > 20 && !@event.event_type.average_rating.nil? %>
						<p>
						<div class="stars" id="rating" data-toggle="tooltip" data-placement="top" title="Rating: <%=@event.event_type.average_rating%>/5">
							<div style="width:<%=@event.event_type.average_rating.to_f*16%>px;"/></div>
						</div>
						(<%=@event.event_type.rating_opinions_count%> opiniones)
						<script type="text/javascript">
						$(document).ready(function(){
    						$('#rating').tooltip();
  						});
						</script>
						</p>
					<% end %>

					<%if @event.is_sold_out%>
						<a href="#" class="btn btn-danger btn-kleer btn-caps">
							<%=t("general.buttons.complete")%>
						</a>
					<% else %>
						<%
						if @event.is_community_event
							button_text = t("general.buttons.register")
						else
							button_text = t("general.buttons.i_am_interested")
						end

						if @event.registration_link != "" 
							registration_link = @event.registration_link
						else
							registration_link = "http://eventos.kleer.la/events/#{@event.id}/participants/new"
						end

						%>
						<a href="<%=registration_link%>" target="_blank" class="btn btn-success btn-kleer btn-caps">
							<%=button_text%>
						</a>
					<% end %>
					<br/>&nbsp;
				</div>
			</div>
			<div class="col-md-5 hidden-xs hidden-sm">
				&nbsp;<br/>
				<% if @event.is_community_event %>
					<img src="/img/personajes/actividades-comunitarias.png" height="400">
				<% else %>
					<% if @event.event_type.nps_opinions_count > 20 && !@event.event_type.net_promoter_score.nil? %>
						<div class="col-md-12">
							<img src="/img/personajes/nps-eventos.png" height="400">
						</div>
						<div class="col-md-5 evento-nps">
							<h2><%=@event.event_type.promoter_count%>/<%=@event.event_type.nps_opinions_count%></h2>
						</div>
						<div class="col-md-6 evento-nps-explanation">
							<a href="http://www.netpromoter.com/why-net-promoter/know/" target="_blank">Net Promoter Score</a>: <strong><%=@event.event_type.net_promoter_score%></strong></h2>
						</div>
					<% else %>
						<img src="/img/personajes/vive-las-met.png" height="500">
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<% 
