<div class="modal fade suscription-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form method="POST" action="/subscribe">
	      <div class="modal-header fondo-verde">
	        <button type="button" class="close suscription-modal-title" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h2 class="modal-title" id="myModalLabel"><%=t('contact.subscription.form.title')%></h2>
	      </div>
	      <div class="modal-body suscripcion-modal-inner fondo-verde-mosaico">
				<input type="text" name="email" class="suscription-textbox" placeholder="<%=t('contact.subscription.form.mail_hint')%>" id="suscriptionModalEmail"/>
				<br/>
				<input type="text" name="fname" class="suscription-textbox" placeholder="<%=t('contact.subscription.form.fname_hint')%>"/>
				<br/>
				<input type="text" name="lname" class="suscription-textbox" placeholder="<%=t('contact.subscription.form.lname_hint')%>"/>
				<br/>
				<select id="influence_zone_tag" name="influence_zone_tag" class="suscription-select">
					<option value=""><%=t('contact.subscription.form.where_are_you')%></option>
					<%=t('contact.subscription.form.countries')%>
				</select>
				<br/>
	      </div>
	      <div class="modal-footer fondo-verde suscripcion-modal-footer">
	        <button type="button" class="btn btn-default btn-kleer" data-dismiss="modal"><%=t('contact.subscription.form.cancel')%></button>
	        <input type="submit" value="<%=t('contact.subscription.form.send')%>" class="btn btn-warning btn-kleer btn-suscription-popup"/>
	      </div>
      </form>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
  	$('.item').eq(Math.floor((Math.random() * $('.item').length))).addClass("active");
    $('.carousel').carousel();
    $('.suscription-textbox').on( 'click', function(){ 
    	$('.btn-suscription').click() 
    });
    $('.suscription-modal').on('shown.bs.modal', function (e) { 
    	$('#suscriptionModalEmail').focus() 
    });
  });
</script>