<div id="myModalRegistration" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 id="myModalLabel"><%=t("popups.course.registration.title")%></h4>
  </div>
  <div class="modal-body">
    <p><%=t("general.texts.loading")%></p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true"><%=t("general.buttons.close")%></button>
  </div>
</div>

<div id="myModalFacilitator" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 id="myModalLabel"><%=t("event.facilitator")%></h4>
  </div>
  <div class="modal-body">
    <p><%=t("general.texts.loading")%></p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true"><%=t("general.buttons.close")%></button>
  </div>
</div>

<div id="myModalSepyme" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 id="myModalLabel"><%=t("event.save90percent")%></h4>
  </div>
  <div class="modal-body">
    <p><%=t("general.texts.loading")%></p>
  </div>
</div>
<div class="row-fluid">    
    <div class="span9"> 
	
        <div class="row-fluid">
            <div class="span12" style="background-color:rgba(255,255,255,1);padding:5px;-moz-border-radius: 5px; border-radius: 5px;">
                <div class="row-fluid">
                    <div class="span12">
						<%=t("event.course")%>:
                        <h2><%=@event_type.name%></h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">&nbsp;</div>
        </div>
        <div class="row-fluid">
            <div class="span12" style="background-color:rgba(255,255,255,1);padding:5px;-moz-border-radius: 5px; border-radius: 5px;">
                <div class="row-fluid">
	
                    <div class="span8">
                        <ul class="nav nav-tabs" id="myTab">
                          <li class="active"><a href="#description" data-toggle="tab"><%=t("event.tabs.description")%></a></li>
                          <li><a href="#recipients" data-toggle="tab"><%=t("event.tabs.target")%></a></li>
                          <li><a href="#program" data-toggle="tab"><%=t("event.tabs.program")%></a></li>
                          <% if @event_type.faqs != "" %>
                            <li><a href="#faqs" data-toggle="tab"><%=t("event.tabs.faqs")%></a></li>
                          <% end %>
                        </ul>

                        <div class="tab-content">
                          <div class="tab-pane active" id="description">
                            <% if !@event_type.elevator_pitch.nil? %>
                              <%=@markdown_renderer.render( @event_type.elevator_pitch )%>
                            <% end %>                            
                            <%=@markdown_renderer.render( @event_type.description )%>
                            
                            <% if !@event_type.learnings.nil? && @event_type.learnings != "" %>
                                <div style="margin: 2em 0; background: #f9fb89; border: 1px solid #f0edce; padding: 12px; border-radius: 12px;">
                                    <h3><%=t("event.details.sections.learnings")%></h3>
                                    <%=@markdown_renderer.render( @event_type.learnings )%>
                                </div>
                            <% end %>
                            
                            <% if !@event_type.takeaways.nil? && @event_type.takeaways != "" %>
                                <div style="margin: 2em 0; background: #dd8fc1; border: 1px solid #f0edce; padding: 12px; border-radius: 12px;">
                                    <h3><%=t("event.details.sections.takeaways")%></h3>
                                    <%=@markdown_renderer.render( @event_type.takeaways )%>
                                </div>
                            <% end %>
                            
                          </div>
                          <div class="tab-pane" id="recipients">
                            <%=@markdown_renderer.render( @event_type.recipients )%>
                            <br/>&nbsp;
                          </div>
                          <div class="tab-pane" id="program">
                            <%=@markdown_renderer.render( @event_type.program )%>
                            <br/>&nbsp;
                          </div>
                          <div class="tab-pane" id="faqs">
                            <%=@markdown_renderer.render( @event_type.faqs )%>
                            <br/>&nbsp;
                          </div>
                        </div>
                    </div>

					<div class="span4">
						<% if @event_type.public_editions.size > 0 %>
							<h3><%=t("event.public_editions")%></h3>
						
							<% @event_type.public_editions.each do |public_edition| %>
								<div class="row-fluid">
									<div class="span2">
										<a href="/<%=session[:locale]%>/entrenamos/evento/<%=public_edition.uri_path%>"><span class="label label-info"><%=public_edition.date.strftime("%d")%><br/><span class="lead"><%=public_edition.date.strftime("%b")%></span></span></a>
									</div>
									<div class="span10">
										&nbsp;<i class="icon-map-marker"></i>&nbsp;<a href="/<%=session[:locale]%>/entrenamos/evento/<%=public_edition.uri_path%>"><%=public_edition.place %></a><br/>
										&nbsp;<img src="/img/flags/<%=public_edition.country_code.downcase%>.png"/> <%=public_edition.city %>, <%=public_edition.country %><br/>&nbsp;
									</div>
								</div>
							<% end %>
						
							<hr/>
						<% end %>
						
						<p><%=t("event.other_trainings")%>:</p>
						<h4><%=@category.name%></h4>
							
							<% @category.event_types.each do |category_event_type| %>

								<% if category_event_type.elevator_pitch != "" && category_event_type.id.to_i != @event_type.id %>

							  		<div class="accordion-group">
									    <div class="accordion-heading">
									        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= category_event_type.id %>">
									          <%= category_event_type.name %>
									        </a>
									    </div>
									    <div id="collapse<%= category_event_type.id %>" class="accordion-body collapse">
									      <div class="accordion-inner">
									        	<%= category_event_type.elevator_pitch %>
											<br/>
											<a href="/<%=session[:locale]%>/categoria/<%=@category.codename%>/cursos/<%= category_event_type.uri_path%>"><%=t("category.see_more")%> >></a>
									      </div>
									    </div>
									  </div>

								<% end %>

							<% end %>
					</div>	
                </div>
            </div>
        </div>
    </div>
    
    <div class="span3" style="text-align:center;">  
        <div class="row-fluid">
            <div class="span12">
                <img src="/img/logos/logo-01.png">
                <%= erb :twitter_box, :layout => false %>
            </div>
        </div>
        &nbsp;
        <div class="row-fluid">
            <div class="span12">
                <%#erb :facebook_box, :layout => false, :locals => { :height => 400, :width => 100, :span => "span3" } %>
            </div>
        </div>
    </div>
    
</div>

