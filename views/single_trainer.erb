<div class="col-md-4 col-sm-4">
  <div class="event-facilitator-face">
    <img src="<%=@event.trainers[0].gravatar_picture_url%>?size=125" class="img-circle">
  </div>
</div>
<div class="col-md-8 col-sm-8 event-facilitator-text">
  <strong><%=t("event.facilitator")%>: </strong><br/>
  <%=@event.trainers[0].name%>

  <% if @event.trainers[0].surveyed_count > 20 && !@event.trainers[0].average_rating.nil? %>
    <p>
    <div class="stars" id="rating-tr<%=@event.trainers[0].id%>" data-toggle="tooltip" data-placement="top"
      title="Rating: <%=@event.trainers[0].average_rating%>/5 basado en <%=@event.trainers[0].surveyed_count%> opiniones de asistentes a sus eventos">
      <div style="width:<%=@event.trainers[0].average_rating.to_f*16%>px;"/></div>
    </div>
    <script type="text/javascript">
    $(document).ready(function(){
        $('#rating-tr<%=@event.trainers[0].id%>').tooltip();
      });
    </script>
    </p>
  <% end %>
</div>
