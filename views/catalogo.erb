	<div class="container">
		&nbsp;<br/>
		<%=t('training.incompany')%>&nbsp;&nbsp;
		<a href="/catalogo" class="btn btn-info btn-kleer"><%=t('training.more_info')%></a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="mailto:<%=t('contact.training_email')%>" class="btn btn-info btn-kleer"><%=t('contact.contact_us')%></a>
		<br/>&nbsp;
		<br/>&nbsp;
		<br/>&nbsp;
		<br/>&nbsp;
	</div>
</div>
